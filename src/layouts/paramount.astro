---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import { MAIN_LANG_CODE } from '../consts';

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang={MAIN_LANG_CODE}>
	<head>
		<BaseHead title={title} description={description} />
	</head>
	<body>
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style lang="less">
	html {
		height: 100%;
	}
	body {
		display: flex;
		flex-direction: column;
		align-items: center;
		height: 100%;
	}
	main {
		width: 100%;
	}
</style>
<style is:global>
  footer {
		position: absolute;
		bottom: 0;
	}
</style>
