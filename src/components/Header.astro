---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<div class="header-content">
		<a href="/">
			<h2>{SITE_TITLE}</h2>
		</a>
		<nav>
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/tags">Tags</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</nav>
	</div>
</header>
<style lang="less">
	@import '../styles/sizing.less';
	header {
		position: sticky;
		top: 0;
		box-shadow: var(--SHADOW-HIGH);
		z-index: var(--LAYER-SYSTEM-UI);
		background-color: rgba(250, 250, 250, .25);
		-webkit-backdrop-filter: blur(12px);
						backdrop-filter: blur(12px);
		@media (prefers-color-scheme: dark) { background-color: rgba(22, 24, 26, .3); }
	}
	.header-content {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		align-items: center;
		width: 100%;
		margin: 0 auto;
		max-width: var(--SITE-WIDTH-LARGE);
		padding: 0 20px;
		@media @mobile { max-width: var(--SITE-WIDTH-SMALL); }
		@media @tablet { max-width: var(--SITE-WIDTH-BASE); }
		@media @desktop { max-width: var(--SITE-WIDTH-MEDIUM); }
		@media @largeDesktop { max-width: var(--SITE-WIDTH-LARGE); }
	}
	a {
		text-decoration: none;
	}
	h2 {
		margin: 0.5em 0;
		font-family: "Inter", "SourceHanSans CN";
	}
	nav {
		margin-right: 20px;
	}
	nav > *:not(:first-child) {
		margin-left: 24px;
	}
</style>
